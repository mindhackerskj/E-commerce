 
  <section>
    <div class="container mt-5">
      <div class="row">
        {{#each products}}
      <div class="col-md-3">

         <div class="card" style="width: 11rem;">
            <img class="form-control" class="card-img-top" alt="Card image cap"
              src="/images/prod_image/{{this._id}}.jpg" style="height:200px;width:auto">
            <div class="card-body">
              <h5 class="card-title">{{this.Name}}</h5>
              <p class="card-text">{{this.price}} Rs.</p>
              <p class="card-text">{{this.description}}</p>
              
            
             <button   onclick="cart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
            </div>
          </div>

        </div> 
       {{/each}}
      </div>

      
    </div>
  </section>



      
   




   